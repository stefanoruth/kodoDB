{
	"name": "kodo-db",
	"version": "0.1.0",
	"license": "MIT",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"dependencies": {
		"@types/lodash": "^4.14.120",
		"@types/node": "^10.12.18",
		"@types/yargs": "^12.0.5",
		"lodash": "^4.17.11",
		"typescript": "^3.2.4",
		"yargs": "^12.0.5"
	},
	"scripts": {
		"clean": "if exist dist rmdir dist /q /s",
		"build": "tsc",
		"watch": "tsc --watch",
		"test": "jest",
		"lint": "tslint -c ./tslint.json ./src/*"
	},
	"devDependencies": {
		"@types/jest": "^23.3.13",
		"@types/mysql": "^2.15.5",
		"@types/pg": "^7.4.11",
		"@types/sqlite3": "^3.1.3",
		"jest": "^23.6.0",
		"mysql": "^2.16.0",
		"nodemon": "^1.18.9",
		"pg": "^7.8.0",
		"sqlite3": "^4.0.6",
		"ts-jest": "^23.10.5",
		"tslint": "^5.12.1",
		"tslint-config-prettier": "^1.17.0"
	},
	"bin": {
		"kododb": "./dist/cli.js"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"collectCoverage": false,
		"collectCoverageFrom": [
			"<rootDir>/src/**/*.ts"
		],
		"testMatch": [
			"<rootDir>/tests/**/*.test.ts"
		]
	},
	"prettier": {
		"semi": false,
		"useTabs": true,
		"singleQuote": true,
		"trailingComma": "es5",
		"proseWrap": "always",
		"jsxBracketSameLine": true,
		"bracketSpacing": true,
		"arrowParens": "avoid",
		"printWidth": 120
	}
}
