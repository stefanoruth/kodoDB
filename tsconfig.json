{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es6", "dom"],
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"removeComments": true,
		"strict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"esModuleInterop": true
	},
	"exclude": ["**/tests/*.test.ts", "dist", "**/tests/setup.ts", "example"]
}
